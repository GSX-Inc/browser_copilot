
{
  "manifest_version": 3,
  "name": "AI Browser Co-pilot",
  "version": "1.0",
  "description": "A hybrid AI assistant using Firebase AI Logic.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "AI Browser Co-pilot"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "identity",
    "storage",
    "debugger",
    "activeTab",
    "tabCapture"
  ],
  "host_permissions": [],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "oauth2": {
    "client_id": "280046356057-7cdk62u7ktjcccb6qavdbdb5ltei9u98.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
